<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3F51B5"/>
            <corners android:radius="8dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <item android:bottom="0dp" android:left="20dp" android:right="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#3F51B5"/>
            <size android:width="12dp" android:height="12dp"/>
        </shape>
    </item>
    <item android:bottom="-12dp" android:left="26dp" android:right="26dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#3F51B5"/>
                <size android:width="12dp" android:height="12dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>